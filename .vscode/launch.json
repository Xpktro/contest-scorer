{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug CLI",
      "program": "${workspaceFolder}/src/cli/index.ts",
      "cwd": "${workspaceFolder}",
      "args": ["score", "-i", "contest"],
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Run CLI",
      "program": "${workspaceFolder}/src/cli/index.ts",
      "args": ["score", "-i", "contest"],
      "cwd": "${workspaceFolder}",
      "noDebug": true,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug Current Test File",
      "program": "test",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    }
  ]
}
